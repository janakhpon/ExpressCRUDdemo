  <div class="wrapper">
    <div class="page-header">
      <img src="../assets/img/blob.png" class="path">
      <img src="../assets/img/path2.png" class="path2">
      <img src="../assets/img/triunghiuri.png" class="shapes triangle">
      <img src="../assets/img/waves.png" class="shapes wave">
      <img src="../assets/img/patrat.png" class="shapes squares">
      <img src="../assets/img/cercuri.png" class="shapes circle">
      <div class="content-center">
        <div class="row row-grid justify-content-between align-items-center text-left">
          <div class="col-12">

         <% if(members.length>0) { %>

            <table class="table">
              <thead>
                  <tr>
                      <th class="text-center">#</th>
                      <th>Name</th>
                      <th>Email</th>
                      <th>BDate</th>
                      <th>Experience</th>
                      <th>Language</th>
                      <th>Rank</th>
                      <th>Since</th>
                      <th>Phone</th>
                      <th class="text-right">Actions</th>
                  </tr>
              </thead>
              <tbody>
                  <% for(var i=0; i < members.length;i++) { %>
                  <tr>
                      <td class="text-center"><%= members[i].code %></td>
                      <td><%= members[i].name %></td>
                      <td><%= members[i].email %></td>
                      <td><%= members[i].bdate %></td>
                      <td><%= members[i].experience %></td>
                      <td><%= members[i].language %></td>
                      <td><%= members[i].rank %></td>
                      <td><%= members[i].sdate %></td>
                      <td><%= members[i].phone%></td>
                      <td class="td-actions text-right">
                          <a href="/members/edit/<%= members[i]._id%>"<button type="button" rel="tooltip" class="btn btn-info btn-sm btn-icon">
                             <i class="tim-icons icon-pencil"></i>
                          </button>
                        </a> 
                          <button type="button" rel="tooltip" class="btn btn-success btn-sm btn-icon">
                              <i class="tim-icons icon-settings-gear-63"></i>
                          </button>
                          <form action="/members/delete/<%= members[i]._id%>" method="post">
                          <button type="submit" rel="tooltip" class="btn btn-danger btn-sm btn-icon">
                              <i class="tim-icons icon-simple-remove"></i>
                          </button>
                          </form>
                      </td>
                  </tr>

                  <% } %>  
                  
              </tbody>
          </table>


          <% } else { %>
            <div> MEMBER LIST IS EMPTY, ADD AND CHECK AGAIN</div>
          <% } %>
        </div>



          </div>
        </div>
      </div>
    </div>
    
